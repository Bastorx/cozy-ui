/*!
 * FORMS
 * =====
 *
 * This file contains all needs for forms, inputs, labels...
 */

checkbox-size = 20px

$checkbox

    input[type=radio]
    input[type=checkbox]
        hide()

    label
        position    relative
        left-padded checkbox-size * 1.4
        cursor      pointer

        &::before
        &::after
            content    ''
            position   absolute
            left       0
            top        0
            box-sizing border-box
            width      checkbox-size
            height     checkbox-size

        &::before
            transition box-shadow 350ms cubic-bezier(0, 0.89, 0.44, 1)

        &::after
            transition-duration .2s
            transition-property opacity, transform


input[type=text]
input[type=password]
    background-color grey-01


[data-input=radio]
    @extend $checkbox

    label::before
        border-radius 50%
        border        2px solid grey-04
        box-shadow    inset 0 0 0 checkbox-size transparent

    input[type=radio]:checked + label::before
        box-shadow inset 0 0 0 3px grey-01, inset 0 0 0 checkbox-size blue


[data-input=checkbox]
    @extend $checkbox

    label
        &::before
        &::after
            border-radius 2px

        &::before
            box-shadow inset 0 0 0 2px grey-02

            &:hover
                box-shadow inset 0 0 0 2px blue

        &::after
            background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20width%3D%2720%27%20height%3D%2720%27%20viewBox%3D%270%200%2020%2020%27%20xmlns%3D%27http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%27%3E%0D%0A%20%20%20%20%3Cpath%20d%3D%27M3%2010.019l4.523%204.523%209.541-9.541%27%20stroke%3D%27%23fff%27%20stroke-width%3D%272%27%20fill%3D%27none%27%2F%3E%0D%0A%3C%2Fsvg%3E%0D%0A")

    &[aria-checked="mixed"] label::after
            background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2220%22%20height%3D%2220%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20d%3D%22M3.497%2010h13.006%22%20stroke%3D%22%23fff%22%20stroke-width%3D%222%22%2F%3E%3C%2Fsvg%3E")

    input[type=checkbox]
        &:checked
            & + label::before
                box-shadow inset 0 0 0 checkbox-size blue

            & + label::after
                opacity   1
                transform scale(1)

        &:not(:checked) + label::after
            opacity   0
            transform scale(0)


$progress
    width         100%
    height        1em
    color         blue
    font-size     .6em
    background    grey-01
    border        none
    border-radius em(20px)

    // chrome and safari
    &::-webkit-progress-bar
        background    grey-01
        border-radius em(20px)

    &::-webkit-progress-value
        background    blue
        border-radius em(20px)

    // firefox
    &::-moz-progress-bar
        background    blue
        border-radius em(20px)
