$app-2panes-toolbar
    display flex
    width   100vw
    height  100vh

    main
        flex     1
        height   auto
        overflow auto
        display  flex
        flex-direction column

    [role=contentinfo]
        flex     1
        height   auto
        overflow auto


$fullbleed
    display  block
    position fixed
    top      0
    bottom   0
    left     0
    right    0


$centerized
    position  absolute
    top       50%
    left      50%
    transform translateX(-50%) translateY(-50%)


$content-center
    display         flex
    align-items     center
    justify-content center
