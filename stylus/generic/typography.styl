@require '../settings/palette'
@require '../settings/breakpoints'
@require '../tools/mixins'

/*------------------------------------*\
  Typography
\*------------------------------------*/

/*------------------------------------*\
  Titles
\*------------------------------------*/

$title-default
    font-weight bold
    color charcoalGrey

$title-h1
    @extend $title-default
    font-size rem(24)
    letter-spacing rem(-.2)
    +small-screen()
        font-size rem(20)

$title-h2
    @extend $title-default
    font-size rem(20)
    +small-screen()
        font-size rem(18)

$title-h3
    @extend $title-default
    font-size rem(18)
    +small-screen()
        font-size rem(16)

$title-h4
    @extend $title-default
    font-size rem(16)
    +small-screen()
        color slateGrey

/*------------------------------------*\
  Text content
\*------------------------------------*/

$text
    font-size rem(16)
    line-height 1.3
    color charcoalGrey

$caption
    font-size rem(12)
    line-height 1.2
    color coolGrey

/*------------------------------------*\
  Alignement
\*------------------------------------*/

$left
    text-align left

$right
    text-align right

$center
    text-align center

$justify
    text-align justify
