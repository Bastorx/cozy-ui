@import '../ui-base/palette'

$tabs-base
    .coz-tabs-links
        margin         0
        padding        0
        border-bottom  1px solid grey-09
        list-style     none

        li
            display inline-block

    .coz-tabs-link
        display        inline-block
        padding        10px 15px
        text-transform uppercase
        font-size      .8em
        cursor         pointer
        color          grey-11

        &:hover
            text-decoration none

        &.active
            border-bottom 2px solid dodger-blue
            color         dodger-blue

    .coz-tabs-tab
        padding-top 20px
