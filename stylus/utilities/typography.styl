@require '../settings/breakpoints.styl'
@require '../tools/mixins.styl'

/*------------------------------------*\
  Typography
\*------------------------------------*/

/*------------------------------------*\
  Titles
\*------------------------------------*/

$title-default
    font-weight bold
    color var(--charcoalGrey)

$title-h1
    @extend $title-default
    font-size rem(24)
    letter-spacing rem(-.2)
    +small-screen()
        font-size rem(20)

$title-h2
    @extend $title-default
    font-size rem(20)
    +small-screen()
        font-size rem(18)

$title-h3
    @extend $title-default
    font-size rem(18)
    +small-screen()
        font-size rem(16)

$title-h4
    @extend $title-default
    font-size rem(16)
    +small-screen()
        font-weight bold
        color var(--charcoalGrey)

/*------------------------------------*\
  Text content
\*------------------------------------*/

$text
    font-size rem(16)
    line-height 1.3
    color var(--charcoalGrey)

$caption
    font-size rem(12)
    line-height 1.2
    color var(--coolGrey)

$uppercase
    text-transform uppercase

global('.u-title-h1', $title-h1)
global('.u-title-h2', $title-h2)
global('.u-title-h3', $title-h3)
global('.u-title-h4', $title-h4)
global('.u-text', $text)
global('.u-uppercase', $uppercase)
global('.u-caption', $caption)
