/*!
 * FORMS
 * =====
 *
 * This file contains all needs for forms, inputs, labels...
 */

checkbox-size = 20px

$checkbox
    input[type=radio]
    input[type=checkbox]
        hide()

    label
        position    relative
        left-padded checkbox-size * 1.4
        cursor      pointer

        &::before
        &::after
            content    ''
            position   absolute
            left       0
            top        0
            box-sizing border-box
            width      checkbox-size
            height     checkbox-size

        &::before
            transition box-shadow 350ms cubic-bezier(0, 0.89, 0.44, 1)

        &::after
            transition-duration .2s
            transition-property opacity, transform


$progress
    width         100%
    height        1em
    color         blue
    font-size     .6em
    background    grey-01
    border        none
    border-radius em(20px)

    // chrome and safari
    &::-webkit-progress-bar
        background    grey-01
        border-radius em(20px)

    &::-webkit-progress-value
        background    blue
        border-radius em(20px)

    // firefox
    &::-moz-progress-bar
        background    blue
        border-radius em(20px)
