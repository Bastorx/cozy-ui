@require '../settings/breakpoints'
@require '../settings/palette'
@require '../tools/mixins'

$table
    position relative
    display flex
    flex-direction column
    flex 1 1 100%
    height 100%
    text-align left
    color coolGrey

$table-head
    flex 0 0 rem(32)

    +small-screen()
        display none

$table-body
    flex 1 1 auto
    display flex
    flex-direction column
    overflow auto

    +small-screen()
        max-height 100%

$table-row
    box-sizing border-box
    display flex
    flex-direction row
    align-items center
    flex 0 0 auto
    height rem(48)
    width 100%
    border-top rem(1) solid silver

    &:hover
        background-color paleGrey
        // Prevent hover effect when scrolling on touch devices
        @media (hover: none)
            background-color transparent

    &:last-child
        border-bottom rem(1) solid silver

    +medium-screen()
        max-width 100vw

$table-row-head
    @extend $table-row
    border 0

    &:hover
        background-color transparent

$table-row-selected
    &
    &:hover
        background-color alpha(dodgerBlue, .1)

$table-cell
    box-sizing border-box
    padding rem(14 16)
    font-size rem(14)
    line-height 1.3


$table-header
    @extend $table-cell
    padding rem(8 16)
    font-size rem(12)
    font-weight bold
    text-transform uppercase

$table-cell--primary
    font-size rem(16)
    line-height 1.15
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    color charcoalGrey

    +small-screen()
        flex 1 1 auto

$table-divider
    position sticky
    top 0
    background-color white
    text-indent rem(32)
    font-weight bold
    font-size rem(12)
    line-height 1.33
    color coolGrey

    &::before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color alpha(dodgerBlue, .05)

    & + * // @stylint ignore
        border 0


    +small-screen()
        text-indent rem(16)
