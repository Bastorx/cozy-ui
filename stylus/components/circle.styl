@require '../settings/palette'
@require '../tools/mixins'

$circle
    display inline-flex
    align-items center
    justify-content center
    border-radius 50%
    overflow hidden
    background-color dodgerBlue
    color white

$circle--medium
    width rem(40)
    height rem(40)
    font-size rem(20)

$circle-text
    font-weight bold
    line-height 1
