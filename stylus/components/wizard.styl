@require '../tools/mixins'
@require '../settings/breakpoints'
@require '../settings/palette'
@require '../components/forms'
@require '../components/button'

// Wizard layout
$wizard
    position fixed
    top 0
    left 0
    height 100%
    display flex
    justify-content center
    align-items center
    width 100%
    background-color white
    color charcoalGrey
    text-align center

$wizard-wrapper
    display flex
    flex-direction column
    width 100%
    height 100%
    max-width rem(512)
    padding 0 rem(16)
    text-align left

    +small-screen('min')
        height auto

$wizard-wrapper--welcome
    height auto

$wizard-errors
    order 1
    margin rem(16) 0 0
    font-size rem(14)
    line-height 1.7
    font-style italic

    +small-screen()
        margin-top rem(8)

$wizard-header
    display flex
    flex-direction column
    flex 0 0 auto
    margin rem(16) 0

    +small-screen()
        margin rem(16) 0 rem(8)

$wizard-main
    display flex
    flex-direction column
    width 100%
    box-sizing border-box

$wizard-footer
    display flex
    order 2
    flex-wrap wrap
    flex 0 0 auto
    padding-bottom env(safe-area-inset-bottom)
    margin-top rem(32)

    & > button // @stylint ignore
    & > a:link // @stylint ignore
        flex 1 1 100%
        margin 0 0 rem(8)
        line-height 1.5

    +small-screen()
        margin-top rem(24)

$wizard-footer--welcome
    justify-content space-between
    +small-screen('min')
        & > button // @stylint ignore
        & > a:link // @stylint ignore
            btn-margin = rem(4)
            flex 0 1 'calc(50% - %s)' % btn-margin

// Wizard elements
$wizard-logo
    position relative
    margin 0 auto
    width rem(120)
    height rem(120)

$wizard-logo-img
    width 100%

$wizard-logo-badge
    display flex
    align-items center
    justify-content center
    position absolute
    bottom rem(6)
    right rem(16)
    width rem(32)
    height rem(32)
    background-color dodgerBlue
    border .125rem solid white
    border-radius 50%

$wizard-header-help
    order -1
    margin 0 0 rem(8)
    font-size rem(18)
    line-height 1.5
    text-align center
    +small-screen()
        margin rem(4) 0 0
        font-size rem(16)

$wizard-desc
    margin rem(32) 0 0
    line-height 1.5
    +small-screen()
        margin rem(24) 0 0

$wizard-previous
    position fixed
    top rem(14)
    left 0
    margin 0
    padding rem(10) rem(16)
    color coolGrey

$wizard-next
    padding-right rem(48)
    padding-left rem(48)
    svg
        position absolute
        right rem(16)

$wizard-button
    +small-screen('min')
        {button--large}

$wizard-password
    +small-screen()
        {input-text--medium}

$wizard-title
    margin 0
    text-align center
    font-size rem(32)
    line-height 1.25
    +small-screen()
        font-size rem(18)
        line-height 1.78

$wizard-subtitle
    margin rem(8) 0 0
    text-align center
    font-size rem(16)
    font-weight normal
    line-height 1.5
    +small-screen()
        margin 0
        font-size rem(14)
        line-height 1.15

$wizard-title--welcome
    +small-screen()
        font-size rem(24)
        line-height 1.17

$wizard-showbutton
    position absolute
    right 0
    top rem(11)
    margin 0
    border 0
    padding 0
    min-width auto
    background-color transparent
    color coolGrey

    &:hover
    &:focus
        background-color inherit
        color charcoalGrey

$wizard-dualfield
    display flex
    flex-direction row
    border rem(1) solid silver
    border-radius rem(2)

$wizard-dualfield--focus
    border-color dodgerBlue

$wizard-protocol
    display flex
    align-items center
    background-color paleGrey
    border-right rem(1) solid silver
    padding 0 rem(16)

    svg
        fill currentColor
        margin-right rem(8)

$wizard-select
    @extend $select
    flex 0 0 auto
    margin rem(2)
    width rem(148)
    border 0
    padding rem(11 16 11 8)

    &:hover
    &:focus
        position relative
        z-index 1
        background-color paleGrey
        border 0
        outline 0

$wizard-select--medium
    @extend $select--medium
    padding rem(6 16 8 8)

$wizard-select--narrow
    width rem(40)

$wizard-input
    flex 1 1 auto
    border 0
    padding-right rem(8)
    &:hover
    &:focus
        position relative
        z-index 1
        border 0
        outline 0

$wizard-notice
    order 2
    margin rem(16) 0 0
    line-height 1.5

    p
        margin 0

    a
        color dodgerBlue
        text-decoration none

        &:hover
        &:focus
            color scienceBlue

    +small-screen('min')
        margin rem(32) 0 0

$wizard-notice--lost
    font-size rem(16)
