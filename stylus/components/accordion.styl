@require '../settings/palette'
@require '../tools/mixins'

$accordion
    padding 0

$accordion-item
    border-bottom: rem(1) solid silver
    font-size rem(16)

$accordion-title
    display flex
    align-items center
    line-height 2
    color slateGrey
    cursor pointer
    outline 0
    padding rem(4) 0

    &:hover
    &:focus
        color charcoalGrey

        svg
            fill slateGrey

    svg
        margin-right rem(4)
        transform rotate(0)
        transition transform 300ms ease
        fill coolGrey

$accordion-title--active
    color charcoalGrey

    svg
        transform rotate(90deg)
        fill coolGrey

$accordion-body
    height auto
    max-height 0
    overflow hidden
    line-height 1.3
    color charcoalGrey
    transition max-height 300ms ease-out

    &:after
        content ''
        display block
        height rem(8)

    &[aria-hidden='true']
        display block
        visibility visible

$accordion-body--active
    max-height 600px
    transition max-height 300ms ease-in
