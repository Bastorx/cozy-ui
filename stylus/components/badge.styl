@require '../tools/mixins'

size = rem(14)

$badge-root
    position relative
    display inline-flex

$badge
    position absolute
    bottom - (size / 2)
    right - (size / 2)
    width size
    height size
    border-radius 50%
    background-color var(--black)
    color var(--white)
    z-index 1
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-content center
    align-items center
    font-size rem(10)
    border rem(1) solid var(--white)
    cursor inherit

$badge--new
    color var(--zircon)
    background-color var(--dodgerBlue)

$badge--normal
    color var(--paleGrey)
    background-color var(--charcoalGrey)

$badge--error
    color var(--chablis)
    background-color var(--pomegranate)
