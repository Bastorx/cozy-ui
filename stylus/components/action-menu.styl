@require './popover.styl'
@require '../tools/mixins'

$actionmenu
    .c-actionmenu
        @extend        $popover
        z-index        $file-action-menu
        position       fixed
        bottom         rem(9)
        left           0
        width          'calc(100% - %s)' % rem(16)
        margin         0 rem(8)
        padding-bottom rem(5)
        box-sizing border-box

        &.with-transition
            transition transform .1s ease-out

        hr
            margin-top 0
