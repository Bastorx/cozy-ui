@require './popover.styl'
@require '../tools/mixins.styl'

$actionmenu
    @extend        $popover
    z-index        $file-action-menu
    position       fixed
    bottom         rem(9)
    bottom         env(safe-area-inset-bottom) // @stylint ignore
    left           0
    width          'calc(100% - %s)' % rem(16)
    margin         0 rem(8)
    padding-bottom rem(5)
    box-sizing border-box

    &.with-transition
        transition transform .1s ease-out

    hr
        margin-top 0

$actionmenu-header
    box-sizing border-box
    border-bottom rem(1) solid var(--silver)
    padding rem(16)
    min-height rem(64)

$actionmenu-item
    height rem(48)
    cursor pointer

    &:hover
        background-color var(--paleGrey)
