@require '../settings/palette'
@require '../settings/breakpoints'
@require '../tools/mixins'

$empty
    display          flex
    flex-direction   column
    justify-content  center
    flex             1 0 auto
    align-self       center
    padding          rem(16) 0
    text-align       center

    +medium-screen()
        height 100%
        width 100%
        position fixed
        top 0
        left 0
        pointer-events none

$empty-img
    display              block
    margin               0 auto rem(32)
    height               rem(140)

    +medium-screen()
        height  rem(105)

$empty-title
    margin       0 auto
    max-width    rem(1008)
    line-height  1.3

    +medium-screen()
        margin  0 rem(24)

$empty-text
    margin   rem(5) auto 0
    max-width    rem(1008)
    color        coolGrey
    line-height  1.5

    +medium-screen()
        margin  rem(5 24 0)
