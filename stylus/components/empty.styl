@require '../settings/palette'
@require '../settings/breakpoints'

$empty
    display          flex
    flex-direction   column
    justify-content  center
    flex             1 0 auto
    align-self       center
    padding          1rem 0
    text-align       center

    +medium-screen()
        height 100%
        width 100%
        position fixed
        top 0
        left 0
        pointer-events none

$empty-img
    display              block
    margin               0 auto
    height               8.75rem

    +medium-screen()
        height  6.5625rem

$empty-title
    font-size       1.5rem
    margin          2rem auto 0
    line-height     1.3
    color           charcoalGrey
    letter-spacing  -.2px

    +medium-screen()
        margin  2rem 1.5em 0

$empty-text
    margin-top   .3125rem
    color        coolGrey
    line-height  1.5

    +medium-screen()
        margin  .3125rem 1.5em 0
