@require 'settings/breakpoints.styl'
@require 'settings/palette.styl'
@require 'settings/z-index.styl'
@require './controls.styl'

.pho-viewer-wrapper
    position        absolute
    left            0
    right           0
    top             0
    bottom          0
    z-index         $overlay-index
    background      charcoalGrey
    overflow        hidden
    color           white

    &--light
        background  white
        color       black

.pho-viewer-imageviewer
.pho-viewer-noviewer
.pho-viewer-audioviewer
.pho-viewer-videoviewer
.pho-viewer-pdfviewer
.pho-viewer-textviewer
.pho-viewer-canceled
    position         relative
    display          flex
    width            60%
    max-height       100%
    justify-content  center
    align-items      center
    flex-direction   column

    h2
        max-width   90%

    +medium-screen()
      margin-left      0
      width            100%

// rules for specific viewers below

.pho-viewer-videoviewer
    video
        width       100%
        max-width   31.25rem
        height      auto

.pho-viewer-textviewer
    .pho-viewer-textviewer-content
      white-space pre-line
      width 100%
      max-height 70%
      overflow auto

      a
        color azure

    +medium-screen()
      width 90%
      margin-left 5%

.pho-viewer-filename
    max-width     90%
    text-overflow ellipsis

.pho-viewer-pdfviewer-pdf
  overflow auto
  width 100%

.pho-viewer-pdfviewer-page > *
  margin auto

.pho-viewer-pdfviewer-toolbar
  position absolute
  bottom 2rem
  background charcoalGrey
  color white
  border-radius .5rem

.pho-viewer-imageviewer
    flex             1 1 100%
    width            auto
    max-width        100%

    img
        display     block
        max-width   100%
        max-height  100%
        box-shadow  0 .375rem 1.5rem 0 rgba(0, 0, 0, 0.5)
