@import '../../stylus/ui-base/palette'

.toggle
    display inline-block
    width 2em
    height 1em

.checkbox
    display none

.label
    position relative
    display inline-block
    width 100%
    height 100%
    border-radius 1em
    background grey-09
    transition all .2s ease-out

.label:before
    position absolute
    top 0
    bottom 0
    left 2px
    display inline-block
    width .9em
    height .9em
    margin auto
    border-radius 50%
    content ''
    background white
    transition all .2s ease-out

.checkbox:checked + .label
    background emerald

    &:before
        left calc(100% - .9em - 2px)
