@require '../../stylus/components/forms'

.o-field
    @extend $field


.o-field-input
    position relative
    max-width rem(512)

.o-side
    position absolute
    top 0.5rem
    right 0
    cursor pointer
    text-transform unset

.o-side-fullwidth
    max-width 100%

.o-field-input-action
    @extend .o-side
    top -1.5rem
    text-transform uppercase
