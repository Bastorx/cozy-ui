@require 'settings/palette.styl'
@require 'components/popover.styl'

.c-menu
    position relative
    display  inline-block

.c-menu__inner
    @extend    $popover
    display    none
    position   absolute
    margin     0
    margin-top 1px
    min-width  220px
    // cuts the hover background properly (border-radius)
    overflow   hidden
    border     0
    color      charcoalGrey

.c-menu--left
    .c-menu__inner
        left 0

.c-menu--right
    .c-menu__inner
        right 0

.c-menu__inner--opened
    display block

.c-menu__btn
    font-size 1rem
    border 0

.c-menu__btn:not([disabled]):not([aria-disabled=true]):hover
.c-menu__btn:not([disabled]):not([aria-disabled=true]):active
.c-menu__btn:not([disabled]):not([aria-disabled=true]):focus
    background transparent

$paddingItem = .5rem

.c-menu__item
    cursor pointer
    padding   $paddingItem

.c-menu__item-icon
    $marginIcon = .75rem
    margin-right $marginIcon
    // we need to compensate for the already present margin
    margin-left $marginIcon - $paddingItem
    font-size 1.0625rem

.c-menu__item:hover
.c-menu__item:focus
    background-color paleGrey
    outline          none

.c-menu__item--disabled
    opacity .5
