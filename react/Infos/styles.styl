@require 'settings/palette'
@require 'settings/breakpoints'
@require 'tools/mixins'

.Infos
    position relative
    border-radius 8px
    padding 2rem 1.5rem

    +mobile()
        padding 1rem

    &.Infos--primary
        background-color var(--zircon)

    &.Infos--secondary
        background-color var(--paleGrey)

    &.Infos--danger
        background-color var(--chablis)

.Infos-description
    max-width 32rem

.Info-close
    position absolute
    top 0
    right 0
    padding 1rem
    cursor pointer
    border 0
    background transparent
