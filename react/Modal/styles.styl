@require '../../stylus/tools/mixins'
@require '../../stylus/settings/palette'
@require '../../stylus/components/button'
@require '../../stylus/utilities/display'
@require '../../stylus/components/modals'

.c-modal-container
    @extend $modals

.c-modal-wrapper
    @extend $modal-wrapper

    &.c-modal-wrapper--fullscreen
        @extend $modal-wrapper--fullscreen

.c-modal
    @extend $modal

    &.c-modal--fullscreen
        @extend $modal--fullscreen

.c-modal--small
    @extend $modal--small

.c-modal--medium
    @extend $modal--medium

.c-modal--large
    @extend $modal--large

.c-modal--xlarge
    @extend $modal--xlarge

.c-modal--xxlarge
    @extend $modal--xxlarge


.c-modal-header
    @extend $modal-header

    .c-modal--closable &
        @extend $modal-header--closable

.c-modal-header--branded
    @extend $modal-header--branded

.c-modal-header--icon
    @extend $modal-header-icon

    .c-header-icon
        @extend $header-icon

    .c-header-exchange
        @extend $header-exchange

    .c-header-service
        @extend $header-icon-service

.c-header-icon--ghost
    @extend $modal-header-icon--ghost

    &.is-active
        @extend $modal-header-icon--ghost-active

    .c-header-icon
        @extend $header-icon--ghost

    .c-header-exchange
        @extend $header-exchange--ghost

    .c-header-service
        @extend $header-icon-service--ghost

.c-modal-app
    @extend $modal-header-app

.c-app-editor
    @extend $modal-header-app-editor

.c-app-icon
    @extend $modal-header-app-icon

.c-modal-footer
    @extend $modal-footer

.c-modal-footer--button
    @extend $modal-footer--button

.c-modal-section
    @extend $modal-section

.c-modal-content
    @extend $modal-content

.c-modal--small-spacing
    .c-modal-close
        @extend $modal-close--small
    .c-modal-header
        @extend $modal-header--small
    .c-modal-content
        @extend $modal-content--small

.c-modal--large-spacing
    .c-modal-close
        @extend $modal-close--large
    .c-modal-header
        @extend $modal-header--large
    .c-modal-content
        @extend $modal-content--large

.c-modal-close
    @extend $modal-close

.c-modal-close--notitle
    @extend $modal-close--notitle

.c-modal--overflowHidden
    @extend $modal--hidden

.c-modal-close--notitle + .c-modal-content
    margin-top rem(64)
